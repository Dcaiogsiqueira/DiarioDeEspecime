@model IEnumerable<DiarioDeEspecime.Models.Especie>

@{
    ViewData["Title"] = "Lista de Espécies";
}

<h2>Lista de Espécies</h2>

<div class="mb-3">
    <form method="get" class="row g-3">
        <div class="col-md-4">
            <input type="text" name="search" class="form-control" placeholder="Buscar por nome científico ou popular" />
        </div>
        <div class="col-md-2">
            <select name="genero" class="form-select">
                <option value="">Filtrar por Genero</option>
                @foreach (var genero in ViewBag.Generos)
                {
                    <option value="@genero">@genero</option>
                }
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </div>
        <div class="col-md-2">
            <a asp-action="Create" class="btn btn-success">Nova Espécie</a>
        </div>
    </form>
</div>

<table class="table table-striped table-hover">
    <thead class="table-light">
        <tr>
            <th>Nome Científico</th>
            <th>Nome Popular</th>
            <th>Genero</th>
            <th>Familia</th>
            <th>Classe</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var especie in Model)
        {
            <tr>
                <td>
                    <div class="d-flex align-items-center">
                        <a asp-action="Details" asp-route-id="@especie.Id" class="btn btn-info btn-circle me-2" title="Detalhes">
                            <i class="fas fa-info"></i>
                        </a>
                        <span>@especie.NomeCientifico</span>
                    </div>
                </td>
                <td>@especie.NomeEspecie</td>
                <td>@especie.Genero</td>
                <td>@especie.Familia</td>
                <td>@especie.Classe</td>
            </tr>
        }
    </tbody>
</table>
