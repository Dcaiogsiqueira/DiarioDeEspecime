@model IEnumerable<DiarioDeEspecime.Models.Especime>

@{
    ViewData["Title"] = "Lista de Espécimes";
}

<h2>Lista de Espécimes</h2>

<div class="mb-3">
    <form method="get" class="row g-3">
        <div class="col-md-4">
            <input type="text" name="search" class="form-control" placeholder="Buscar por nome popular, nome científico, gênero, pessoa ou local de encontro" />
        </div>
        <div class="col-md-2">
            <select name="sortOrder" class="form-select">
                <option value="asc">Ordem Alfabética Crescente</option>
                <option value="desc">Ordem Alfabética Decrescente</option>
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </div>
        <div class="col-md-2">
            <a asp-action="SelectEspecie" class="btn btn-success">Novo Espécime</a>
        </div>
    </form>
</div>

<table class="table table-striped table-hover">
    <thead class="table-light">
        <tr>
            <th>Nome Científico</th>
            <th>Nome Popular</th>
            <th>Local de Encontro</th>
            <th>Encontrado por</th>
            <th>Gênero</th>
            <th>Sexo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var especime in Model)
        {
            <tr>
                <td>
                    <div class="d-flex align-items-center">
                        <a asp-action="Details" asp-route-id="@especime.Id" class="btn btn-info btn-circle me-2" title="Detalhes">
                            <i class="fas fa-info"></i>
                        </a>
                        <span>@especime.Especie.NomeCientifico</span>
                    </div>
                </td>
                <td>@especime.Especie.NomeEspecie</td>
                <td>@especime.LocalEncontro</td>
                <td>@especime.Coletor</td>
                <td>@especime.Especie.Genero</td>
                <td>@(especime.Sexo == "Macho" ? "Macho" : especime.Sexo == "Fêmea" ? "Fêmea" : "Indeterminado")</td>
            </tr>
        }
    </tbody>
</table>
