@model IEnumerable<DiarioDeEspecime.Models.Especie>

@{
    ViewData["Title"] = "Selecionar Espécie";
}

<h2>Selecionar Espécie</h2>

<div class="mb-3">
    <form method="get" class="row g-3">
        <div class="col-md-6">
            <input type="text" name="search" class="form-control" placeholder="Buscar por nome popular, nome científico ou gênero" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Buscar</button>
        </div>
        <div class="col-md-2">
            <a asp-action="Create" asp-controller="Especie" asp-route-returnUrl="@Url.Action("SelectEspecie", "Especime")" class="btn btn-success">Nova Espécie</a>
        </div>
    </form>
</div>

@if (Model.Any())
{
    <table class="table table-striped table-hover">
        <thead class="table-light">
            <tr>
                <th>Nome Científico</th>
                <th>Nome Popular</th>
                <th>Gênero</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var especie in Model)
            {
                <tr>
                    <td>@especie.NomeCientifico</td>
                    <td>@especie.NomeEspecie</td>
                    <td>@especie.Genero</td>
                    <td>
                        <a asp-action="Create" asp-route-especieId="@especie.Id" class="btn btn-success">Selecionar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">Nenhuma espécie encontrada.</p>
}
